+	time_t ctime = (st->mtime > st->ctime)? st->mtime : st->ctime;
+	fusent_unixtime_to_wintime(ctime, &fileinfo->ChangeTime);
+
+	fusent_unixmode_to_winattr(st->mode, &fileinfo->FileAttributes);
