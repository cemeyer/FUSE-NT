+		arg->valid |= FATTR_MODE,   arg->mode = iattr->ia_mode;
+	if (ivalid & ATTR_UID)
+		arg->valid |= FATTR_UID,    arg->uid = iattr->ia_uid;
+	if (ivalid & ATTR_GID)
+		arg->valid |= FATTR_GID,    arg->gid = iattr->ia_gid;
+	if (ivalid & ATTR_SIZE)
